<html>
<head>
    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script src="https://unpkg.com/viz.js@1.8.0/viz.js" type="javascript/worker"></script>
    <script src="https://unpkg.com/d3-graphviz@2.1.0/build/d3-graphviz.min.js"></script>
    <style>
        body {
            margin: 0;
        }

        svg {
            width: 100%;
            height: 100%
        }
    </style>
    <script>
        window.addEventListener("load", load);
        window.addEventListener("hashchange", reload);

        async function load() {
            const response = await fetch(window.location.hash.substring(1));
            const text = await response.text();
            d3.select("body").graphviz().renderDot(text);
        }

        async function reload() {
            for (var svg of document.getElementsByTagName("svg")) {
                document.body.removeChild(svg);    
            }
            
            await load();
        }
    </script>
</head>
<body>
</body>
</html>